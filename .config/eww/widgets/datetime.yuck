(defwidget time []
	(box :class "widget time"
		:space-evenly "false"
		time
		(label :class "icon" :text " ")
	)
)

(defpoll time :interval "10s"
	"date +'%H:%M'")

(defwidget date []
	(box :class "widget date"
		:space-evenly "false"
		date
		(label :class "icon" :text " ")
	)
)

(defpoll date :interval "10s"
	"date +'%m/%d'")
